{
  "name": "The Trail",
  "main": "index.html",
  "js-flags": "--exposegc",
  "chromium-args": "--in-process-gpu --disable-direct-composition --disable-raf-throttling",
  "scripts": {
    "windows": "node scripts/deployment/deployment.js windows",
    "mac": "node scripts/deployment/deployment.js mac",
    "linux": "node scripts/deployment/deployment.js linux",
    "vdf": "python scripts/generate_vdf.py",
    "deploy-windows": "npm run windows; npm run linux; npm run vdf;",
    "deploy-mac": "npm run mac && npm run vdf",
    "compress-bgm": "node scripts/compress-bgm.js"
  },
  "window": {
    "position": "center",
    "show": true,
    "toolbar": false,
    "icon": "icon/icon.png",
    "width": 1280,
    "height": 720,
    "title": "The Trail"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "open-file-explorer": "^1.0.2",
    "trash": "^7.2.0"
  },
  "devDependencies": {
    "fluent-ffmpeg": "^2.1.3",
    "path": "^0.12.7",
    "plist": "^3.1.0",
    "tar": "^7.4.3",
    "yauzl": "^2.10.0"
  }
}
